<div class="p-4 mx-auto">
  <div class="row clients-list">
    <div class="col-9">
        <h3>Tabla de guias</h3>
      <table class="table table-clients">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Perfil</th>
            <th scope="col">Nombre</th>
            <th scope="col">Categoria</th>
            <th scope="col">Creación</th>
            <th scope="col">Busquedas</th>
            <th scope="col">Productos</th>
            <th scope="col">Admin</th>
            <th colspan="4" scope="col" class="text-center">Options</th>
          </tr>
        </thead>
        <tbody>
          {{#each guides}}
            <tr>
              <th scope="row">{{guides_id}}</th>
              <td><img width="50px" height="50px" src={{pic_profile}} alt=""></td>
  
              <td>{{name_plant}}</td>
              <td>{{type_plant}}</td>
              <td>{{timeago created}}</td>
              <td>{{searched}}</td>
              <td>{{product}}</td>
              <td>{{admin_id}}</td>


                {{!-- Buttons --}}
  
{{!------------------------------------- See more -------------------------------------}}
              <td  class="buttons-clients-table"><a href="/clients/more/{{guides_id}}" class="btn btn-success"><i class="fas fa-seedling"></i></a></td>

{{!------------------------------------- Edit -------------------------------------}}
              <td class="buttons-clients-table"><a href="/clients/edit/{{guides_id}}" class="btn btn-info "> <i class="fas fa-user-edit"></i></a></td>

{{!------------------------------------- Delete -------------------------------------}}
              <td  class="buttons-clients-table"><a href="/clients/delete/{{guides_id}}" class="btn btn-danger"><i class="far fa-trash-alt"></i></a></td>
  

            </tr>
            {{else}}
                <h3 style="color: #b2a800;">No hay guias añadidas</h3>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-3">
        {{>addGuides}}
    </div>
  </div>
</div>