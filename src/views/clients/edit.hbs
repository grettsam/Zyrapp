<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <h2 class="card-title mx-auto mt-2">Nuevo Cliente</h2>
        <div class="card-body">
          <form action="/clients/edit/{{cliente.clients_id}}" method="POST">
            <div class="mb-3">
              <input
                type="text"
                name="username"
                class="form-control"
                placeholder="Nombre"
                autofocus
                required
                value="{{cliente.username}}"
              />
            </div>
            <div class="mb-3">
              <input
                type="email"
                name="email"
                class="form-control"
                placeholder="Correo"
                autofocus
                required
                value="{{cliente.email}}"
              />
            </div>
            <div class="mb-3">
              <input
                type="password"
                name="password"
                class="form-control"
                placeholder="Contraseña"
                autofocus
                required
                value="{{cliente.password}}"
              />
            </div>
            <div class="mb-3">
              <select class="form-select" required name="plan" id="plan">
                <option value="basico">Básico</option>
                <option value="medio">Medio</option>
                <option value="premium">Premium</option>
              </select>
            </div>
            <div class="mb-3 d-grid gap-2">
              <button class="btn btn-success btn-block">Guardar cambios</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>