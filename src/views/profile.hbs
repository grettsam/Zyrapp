{{#if user}}
  
  <div class="container ">
    <div class="row d-flex justify-content-center">
      <div class="col-md-12 mt-5 pt-5">
        <div class="row z-depth-3">
          <div class="col-sm-4 bgcolor rounded-left">
              <div class="card-block text-center text-white">
                  <i class="fas fa-user-tie fa-7x mt-5"></i>
                     <h2 class="font-weight-bold mt-4">Usuario: {{user.username}}</h2>
                     <p>Administrador</p>
                     <i class="far fa-edit fa-2x mb-4"></i>
            </div>
          </div>
            <div class="col-sm-8 bg-white rounded-right">
                      <h3 class="mt-3 text-center">Información</h3>
                      <hr class="badge-primary ">
                      <div class="row">
                          <div class="col-sm-6">
                            <p class="font-weight-bold">ID</p>
                            <h6 class="text-muted">{{user.admin_id}}</h6>
                          </div>
                          <div class="col-sm-6">
                            <p class="font-weight-bold">Correo Electrónico</p>
                            <h6 class="text-muted">{{user.email}}</h6>
                          </div>
                      </div>
                      <hr class="badge-primary">
                      <ul class="list-unstyled d-flex justify-content-center mt-4">
                          <li><a href="#"><i class="fab fa-facebook-f px-3 h4 textcolor"></i></a></li>
                          <li><a href="#"><i class="fab fa-youtube px-3 h4 textcolor"></i></a></li>
                          <li><a href="#"><i class="fab fa-twitter px-3 h4 textcolor"></i></a></li>
                      </ul>
            </div>
        </div>
      </div>
    </div>
  </div>

{{/if}}